{
    "manifest_version": 2,
    "name": "摄影阅片助手",
    "version": "0.0.4",
    "description": "Help to download photos from photo community such as tuchong and mepai",
    "icons": {
        "16": "img/icon.png",
        "32": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_title": "摄影阅片助手",
        "default_popup": "popup.html"
    },
    "commands": {
        "toggle-tags": {
            "suggested_key": {
                "default": "Alt+S",
                "mac": "MacCtrl+S"
            },
            "description": "Toggle Tags"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "js": [
                "content-script.js"
            ],
            "matches": [
                "https://*.tuchong.com/*",
                "https://*.mepai.me/*"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "downloads"
    ]
}